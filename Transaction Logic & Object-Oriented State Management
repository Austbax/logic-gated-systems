class bank:
  def __init__(self):
    self.bal = 1000
    self.score = 0
    self.symbols = ["!", "@", "$", "%", "&"]

  def check_pass(self):
    self.score = 0

    password = input("please enter your password: ")
    for char in password:
      if char in self.symbols:
        self.score += 1
      if char.isnumeric:
        self.score += 1
      if char.isupper:
        self.score += 1

    return self.score

  def withdraw(self):
    draw = int(input("How much do you want to withdraw?"))
    if draw <= self.bal:
     self.bal -= draw
     print(f"withdrew {draw}. New balance is {self.bal}")
    else:
     print("not enough funds")

  def deposit(self):
    dep = int(input("How much do you want to Deposit?"))
    self.bal += dep
    print(f"Deposited {dep}. New balance is {self.bal}")
  def info(self):
    print(f"your balance is ${self.bal}")


account = bank()
score = account.check_pass()
if score >= 5:
  bal =input("do you want to see your balance? y/n")
  if bal == "y":
    account.info()
    print("Thank you")
  if bal == "n":
    print("Thank you")
else:
  print("please enter a stronger password of score of 5 or more!")
action = input("Do you want to make a Deposit or withdraw today? w/d")
if action == "w":
  account.withdraw()
if action == "d":
  account.deposit()
